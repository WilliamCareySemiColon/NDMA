<?xml version="1.0" encoding="utf-8" ?>
<!--Code logic found at the site https://www.c-sharpcorner.com/article/customize-button-in-xamarin-android/ -->
<!--The application look for the buttons-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <layer-list>
      <item android:right="3dp" android:top="2dp" android:bottom="2dp" android:left="3dp">
        <shape>
          <corners android:radius="12dp"></corners>
          <!--Colour was the only changed from the source-->
          <solid android:color="#000"></solid>
			<stroke android:width="2dip" android:color="#FFF"></stroke>
          <padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp"></padding>
        </shape>
      </item>
    </layer-list>
  </item>

</selector>
