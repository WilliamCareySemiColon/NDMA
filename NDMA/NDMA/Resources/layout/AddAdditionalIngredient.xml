<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/MainBodyColour ">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Food Item Specifications "
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:textAlignment = "center"
        android:layout_marginTop = "20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textSize = "16dp"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="180dp"
        android:layout_marginTop = "100dp"
        android:hint = "Name of the food"
        android:inputType = "text"
        android:fontFamily = "sans-serif"
        android:textAlignment = "center"
        android:textColor = "@color/MainFontOrButtonStyle"
        android:id = "@+id/NutUsername"
    />

     <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:textAlignment = "center"
        android:layout_marginTop = "100dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="40dp"
        android:text = "Search"
        android:id = "@+id/NutSearch"
    />

    <include layout = "@layout/searchingredient"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "400dp"
        android:fontFamily = "sans-serif"
        android:textAlignment = "center"
        android:id = "@+id/TypeOfFoodSpinner"
        android:spinnerMode = "dialog"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:textAlignment = "center"
        android:layout_marginTop = "500dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="200dp"
        android:text = "Cancel"
    />

     <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:textAlignment = "center"
        android:layout_marginTop = "500dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="40dp"
        android:text = "Add"
    />

</RelativeLayout>
