<!--**************************************************
The layout file that is used by the checkdailyinput
activity itself
***************************************************-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/BackGroundGradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "**This page checks a prepared meal planner over the course of three meals. 
        This could be through the fact breakfast is actuully the lunch time or the next identified meal**"
        android:textStyle = "bold"
        android:textAlignment = "center"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop = "20dp"
        android:textColor = "#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Breakfast"
        android:textAlignment = "center"
        android:textSize = "22dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop = "100dp"
        android:textColor = "@color/GhostWhite"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/TestAddBreakfastBtn"
        android:text = "Add"
        android:textAlignment = "center"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop = "100dp"
        android:background = "@drawable/custombutton"
        android:textColor = "@color/GhostWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InputBreakFastName"
        android:text = "Input Breakfast Name"
        android:textAlignment = "center"
        android:textSize = "22dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop = "180dp"
        android:textColor = "@color/GhostWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Lunch"
        android:textAlignment = "center"
        android:textSize = "22dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop = "250dp"
        android:textColor = "@color/GhostWhite"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/TestAddLunchBtn"
        android:text = "Add"
        android:textAlignment = "center"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop = "250dp"
        android:background = "@drawable/custombutton"
        android:textColor = "@color/GhostWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InputLunchName"
        android:text = "Input Lunch Name"
        android:textAlignment = "center"
        android:textSize = "22dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop = "330dp"
        android:textColor = "@color/GhostWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Dinner"
        android:textAlignment = "center"
        android:textSize = "22dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop = "400dp"
        android:textColor = "@color/GhostWhite"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/TestAddDinnerBtn"
        android:text = "Add"
        android:textAlignment = "center"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop = "400dp"
        android:background = "@drawable/custombutton"
        android:textColor = "@color/GhostWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InputDinnerName"
        android:text = "Input Dinner Name"
        android:textAlignment = "center"
        android:textSize = "22dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop = "480dp"
        android:textColor = "@color/GhostWhite"/>

<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Return"
        android:fontFamily = "sans-serif"
        android:textSize = "16dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="210dp"
        android:layout_marginTop = "600dp"
        android:id = "@+id/CancelCheck"
        android:background = "@drawable/custombutton"
        android:textColor = "@color/GhostWhite"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Check"
        android:fontFamily = "sans-serif"
        android:textSize = "16dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="210dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop = "600dp"
        android:id = "@+id/SubmitCheck"
        android:background = "@drawable/custombutton"
        android:textColor = "@color/GhostWhite"/>
</RelativeLayout>