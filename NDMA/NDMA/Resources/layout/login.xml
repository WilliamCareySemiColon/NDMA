<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/MainBodyColour ">

    <!--The objects inside the page view-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:text = "Please enter your creditails to login"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "150dp"
        android:textAlignment = "center"
        android:fontFamily = "sans-serif"
        android:textSize = "22dp"
        android:textColor = "@color/MainFontOrButtonStyle"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "300dp"
        android:hint = "username"
        android:fontFamily = "sans-serif"
        android:textAlignment = "center"
        android:textColor = "@color/MainFontOrButtonStyle"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "400dp"
        android:hint = "password"
        android:fontFamily = "sans-serif"
        android:textAlignment = "center"
        android:textColor = "@color/MainFontOrButtonStyle"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Login"
        android:textSize = "20dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop = "500dp"
        android:background = "@color/MainFontOrButtonStyle"
        android:textColor = "@color/GhostWhite"
    />

</RelativeLayout>
