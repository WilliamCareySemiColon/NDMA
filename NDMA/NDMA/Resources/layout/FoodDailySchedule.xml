
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/MainBodyColour "
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize = "22dp"
        android:textAlignment = "center"
        android:text = "Create the type of schedule desired for today"
    />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Breakfast"
        android:id = "@+id/BreakfastCb"
        android:textSize = "22dp"
    />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Brunch"
        android:id = "@+id/BrunchCb"
        android:textSize = "22dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Lunch"
        android:id = "@+id/LunchCb"
        android:textSize = "22dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Linner"
        android:id = "@+id/LinnerCb"
        android:textSize = "22dp"
    />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Dunch"
        android:textSize = "22dp"
        android:id = "@+id/DunchCb"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Dinner"
        android:id = "@+id/DinnerCb"
        android:textSize = "22dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Supper"
        android:textSize = "22dp"
        android:id = "@+id/SupperCb"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Cancel"
        android:id = "@+id/CancelSchBtn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Submit"
        android:id = "@+id/SubmitSchBtn"/>
</LinearLayout>