<!--*************************************************
The home layout file for the usage of the application 
to connect to all the application pages

The view part of the page has been commented out for 
the usage of the application
**************************************************-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/BackGroundGradient">

    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = " View Account "
        android:id = "@+id/ViewAccount"
        android:background = "@drawable/custombutton"
        android:textColor = "@color/GhostWhite"
    />-->

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:text = "Welcome to the Nutrition and Dietary Management System"
        android:layout_marginTop = "50dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:fontFamily = "sans-serif"
        android:textSize = "20dp"
        android:textAlignment = "center"
        android:textColor = "@color/GhostWhite"/>

    <ImageView
         android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop = "150dp"
        android:id="@+id/WelcomeImage"/>

    <Button
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="220dp"
        android:layout_marginTop = "500dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = " Visit Advisor System "
        android:id = "@+id/AdvisorSystem"
        android:background = "@drawable/custombutton"
        android:textColor = "@color/GhostWhite"/>

    <Button
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop = "500dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = " Log Daily Diet "
        android:id = "@+id/LogDiet"
        android:background = "@drawable/custombutton"
        android:textColor = "@color/GhostWhite"/>

</RelativeLayout>