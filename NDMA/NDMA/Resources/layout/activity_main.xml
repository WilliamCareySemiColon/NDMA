
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/MainBodyColour ">


    <!--The objects inside the page view-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:text = "Welcome to the Nutrition and Dietary Management System"
        android:layout_marginTop = "100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:fontFamily = "sans-serif"
        android:textSize = "20dp"
        android:textAlignment = "center"
        android:textColor = "@color/MainFontOrButtonStyle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:fontFamily = "sans-serif"
        android:textSize = "20dp"
        android:text = "Login"
        android:id = "@+id/Login"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop = "300dp"
        android:background = "@color/MainFontOrButtonStyle"
        android:textColor = "@color/GhostWhite"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:fontFamily = "sans-serif"
        android:textSize = "20dp"
        android:text = "Register"
        android:id = "@+id/Register"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop = "400dp"
        android:background = "@color/MainFontOrButtonStyle"
        android:textColor = "@color/GhostWhite"/>

</RelativeLayout>