<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/BackGroundGradient ">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:text = "Please register your details"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "50dp"
        android:textAlignment = "center"
        android:fontFamily = "sans-serif"
        android:textSize = "22dp"
        android:textColor = "@color/MainFontOrButtonStyle"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "125dp"
        android:hint = "name"
        android:inputType = "text"
        android:fontFamily = "sans-serif"
        android:textAlignment = "center"
        android:id = "@+id/Name"
        android:textColor = "@color/MainFontOrButtonStyle"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "175dp"
        android:hint = "username"
        android:inputType = "text"
        android:fontFamily = "sans-serif"
        android:textAlignment = "center"
        android:id = "@+id/Username"
        android:textColor = "@color/MainFontOrButtonStyle"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "225dp"
        android:hint = "email"
        android:inputType = "textEmailAddress"
        android:fontFamily = "sans-serif"
        android:textAlignment = "center"
        android:id = "@+id/Email"
        android:textColor = "@color/MainFontOrButtonStyle"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "275dp"
        android:hint = "password"
        android:inputType = "textPassword"
        android:fontFamily = "sans-serif"
        android:textAlignment = "center"
        android:id = "@+id/Password"
        android:textColor = "@color/MainFontOrButtonStyle"
    />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "325dp"
        android:hint = "confirm password"
        android:inputType = "textPassword"
        android:fontFamily = "sans-serif"
        android:textAlignment = "center"
        android:id = "@+id/ConfirmPassword"
        android:textColor = "@color/MainFontOrButtonStyle"
    />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "380dp"
        android:fontFamily = "sans-serif"
        android:textAlignment = "center"
        android:id = "@+id/AgeCategory"
        android:spinnerMode = "dialog"
    />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "435dp"
        android:fontFamily = "sans-serif"
        android:textAlignment = "center"
        android:id = "@+id/SexCategory"
        android:spinnerMode = "dialog"
        android:textColor = "@color/MainFontOrButtonStyle"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Register"
        android:fontFamily = "sans-serif"
        android:textSize = "16dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop = "480dp"
        android:id = "@+id/Register"
        android:background = "@color/MainFontOrButtonStyle"
        android:textColor = "@color/GhostWhite"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Login instead"
        android:fontFamily = "sans-serif"
        android:textSize = "16dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop = "550dp"
        android:id = "@+id/LoginInstead"
        android:background = "@color/MainFontOrButtonStyle"
        android:textColor = "@color/GhostWhite"
        />

</RelativeLayout>

